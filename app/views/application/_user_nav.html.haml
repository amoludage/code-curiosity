%li.dropdown.tasks-menu{style: "cursor: pointer;" }
  %a.dropdown-toggle{ data: { toggle: 'dropdown' }}
    %i.fa.fa-calendar : 
    %span.current-round= current_round.from_date.strftime("%b %Y")
  %ul.dropdown-menu
    %li
      %ul.menu
        - @rounds.each do |round|
          %li
            = link_to round.from_date.strftime("%b %Y"), change_round_path(round)
%li.dropdown.user.user-menu
  %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
    %img.user-image#profile-pic{:alt => current_user.name, :src => avatar_url}/
    %span.hidden-xs= current_user.name.titleize
  %ul.dropdown-menu
    %li.user-header
      %img.img-circle{:alt => current_user.name, :src => avatar_url}/
      %p
        = current_user.name.titleize 
        %small Github - #{current_user.github_handle}
    %li.user-footer
      .pull-left
        = link_to "Profile" , user_path(current_user), class: "btn btn-default btn-flat"
      .pull-right
        = link_to 'Sign out', destroy_user_session_path,  class: 'btn btn-default btn-flat'
